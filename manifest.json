{
  "manifest_version": 3,
  "name": "KoT_plus",
  "version": "1.0",
  "description": "KOTのページに月の合計残業時間の情報を追加する拡張機能です。",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://s2.kingoftime.jp/*",
        "https://s2.ta.kingoftime.jp/*",
        "https://s3.kingoftime.jp/*",
        "https://s3.ta.kingoftime.jp/*"
        ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
}
